@model IEnumerable<JobFinder.Models.JobListing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="read-section">
        <h1>Job listings</h1>

        @{
            if (Model.Count() > 0)
            {
                <div class="cards">
                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div class="card-title">
                                Title:
                                @Html.DisplayFor(modelItem => item.Title)
                            </div>
                            <div class="card-description">
                                Location:
                                @Html.DisplayFor(modelItem => item.Location)
                            </div>
                            <div class="card-description">
                                Region:
                                @Html.DisplayFor(modelItem => item.Region)
                            </div>
                            <div class="card-description">
                                Type:
                                @Html.DisplayFor(modelItem => item.Type)
                            </div>
                            <div class="card-description">
                                Added At:
                                @Html.DisplayFor(modelItem => item.JobListingAddedAt)
                            </div>
                            <div class="card-description">
                                Industry:
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </div>
                            <div class="card-description">
                                Company:
                                @Html.DisplayFor(modelItem => item.Company.Name)
                            </div>

                            <div class="card-actions">
                                <a asp-action="Details" asp-route-id="@item.JobListingId">Job Details</a>
                            </div>
                        </div>
                    }
                </div>
            } else
            {
                <p class="no-entries__message">Unfortunately, there are no jobs listed on this site yet. Try again later.</p>
            }
        }
    </div>